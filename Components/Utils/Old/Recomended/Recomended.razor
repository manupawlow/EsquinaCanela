<style>
    .card {
        background-color: #262626; 
        color: white; 
        margin: auto; 
        border-radius: 15px;
    }

    .content {
        margin-left: 0;
        padding-left: 0;
        padding-bottom: 0;
        padding-top: 0;
    }

    .image {
        width: 40%px;
        height: 450px;
        border-radius: 15px 0px 0px 15px;
    }

    .button {
        width: 250px;
        margin: 0 auto;
        border-radius: 20px;
    }
</style>

<MudCard Class="card">
    <MudCardContent Class="content">
        <MudStack Row StretchItems="StretchItems.All" AlignItems="AlignItems.Stretch" Class="gap-x-8">
            <MudImage Src="images/inside.jpg" ObjectFit="ObjectFit.Cover" Class="image" />
            <MudStack Justify="Justify.SpaceEvenly" StretchItems="StretchItems.None" AlignItems="AlignItems.Stretch" Style="padding-bottom: 10px;">
                <MudText Typo="Typo.h5" class="retroSignature" style="font-size: 90px; margin-bottom: -40px;">Recomendados</MudText>
                <hr style="font-size: 60px; border-bottom: 2px solid #4aa6b1; width: 70%;">
                <RecomendedItem Name="Tokio" Description="Verduras grilladas, teriyaki semillas - Opción brie"/>
                <RecomendedItem Name="Mar Griego" Description="Atún, queso crema, olivas ytomate"/>
                <RecomendedItem Name="Ternerita" Description="Carne braseada y fondo"/>
                <RecomendedItem Name="Tarta" Description="Ratatouille"/>
                <RecomendedItem Name="Tarta" Description="Zapallitos"/>
                <MudButton Class="button" Color="Color.Primary" Variant="Variant.Filled">Ver menú completo</MudButton>
            </MudStack>
        </MudStack>
    </MudCardContent>
</MudCard>