<style>
.container {
  position: relative;
  text-align: center;
  color: white;
  margin-bottom: 64px;
}

.bottom-left {
  position: absolute;
  bottom: 50px;
  left: 270px;
}

.image-gradient {
    width: 100%;
    height: 90vh;
    background: linear-gradient(to top right, black, transparent), url('home.jpg');
    background-size: cover;
    background-position: center;
}
</style>

<div class="container">
    <div class="image-gradient"></div>
    <div class="bottom-left pl-0" style="text-align: left;">
        @BottomLeft
    </div>
</div>

@code {
    [Parameter] public required RenderFragment BottomLeft { get; set; }
}
