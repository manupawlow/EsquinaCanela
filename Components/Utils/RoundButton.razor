<div style="@Style">
  <MudButton Color="Color.Primary" Variant="Variant.Filled" style="border-radius: 20px; width: min(250px, 100%);" OnClick="OnClick">
      @ChildContent
  </MudButton>
</div>

@code {
  [Parameter]public RenderFragment? ChildContent { get; set; }

  [Parameter] public EventCallback<MouseEventArgs> OnClick { get; set; }

  [Parameter] public string? Margin { get; set; } = "15px auto";

  private string Style => $"width: 100%; text-align: center; margin: {Margin};";
}
